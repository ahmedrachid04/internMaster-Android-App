<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"> <!-- Fond clair -->

    <!-- Icône Home -->
    <ImageView
        android:id="@+id/homeIcon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_home"
        android:contentDescription="Icône Home"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:tint="#808080" />


    <!-- Conteneur principal -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_below="@id/homeIcon">

        <!-- Logo -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo_intern"
            android:contentDescription="Logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="6dp" />

        <!-- Titre -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connectez-vous"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <!-- Champ Adresse e-mail -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adresse email *"
            android:textColor="#0038A7"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez votre email"
            android:inputType="textEmailAddress"
            android:backgroundTint="#0038A7"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Champ Mot de passe -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mot de passe *"
            android:textColor="#0038A7"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez votre mot de passe"
            android:inputType="textPassword"
            android:backgroundTint="#0038A7"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Mot de passe oublié -->
        <TextView
            android:id="@+id/forgotPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe oublié ?"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- Bouton Connexion -->
        <Button
            android:id="@+id/btnConnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:textSize="16sp"
            android:backgroundTint="#0038A7"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />
    </LinearLayout>
</RelativeLayout>
